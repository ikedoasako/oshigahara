<div class="container mt-5">
<h5>会員詳細画面</h5>
  <div class="row">
    <div class="col-sm-2">
      <p>会員ID</p>
      <p>ユーザー名</p>
      <p>所属軍</p>
      <p>メールアドレス</p>
      <p>ステータス</p>
    </div>
    <div class="col-sm-10">
      <p><%= @user.id %></p>
      <p><%= @user.name %></p>
      <p><%= @user.bushou.bushou_name %></p>
      <p><%= @user.email %></p>
      <p class="text-secondary font-weight-bold">
        <% if @user.is_deleted %>
        退会
      </p>
        <% else %>
      <p class="text-success font-weight-bold">
        有効
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success" %>
    </div>
    <div class="col-sm-3">
      <%= link_to "投稿履歴一覧を見る", admin_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<div class="container mt-5">
  <h3>会員投稿一覧</h3>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>タイトル</th>
          <th>投稿日時</th>
          <th>投稿削除</th>
        </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.user.name, admin_post_path(post.id) %></td>
          <td><%= post.title %></td>
          <td><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= link_to "削除", admin_post_path(post.id),  method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
<div class="container mt-5">
  <div class= "row">
    <div class= "col-md-10">
      <h3>投稿詳細</h3>
      <table class="table mt-5">
        <thead>
          <tr>
            <th class="text-nowrap pr-lg-5">投稿日時</th>
            <th class="text-nowrap pr-lg-5">投稿者名</th>
            <th class="text-nowrap pr-lg-5">所属軍</th>
            <th class="text-nowrap pr-lg-5">タイトル</th>
            <th>本文</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= link_to @user.name, admin_user_path(@user.id) %></td>
            <td><%= @user.bushou.bushou_name %></td>
            <td><%= @post.title %></td>
            <td><%= @post.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
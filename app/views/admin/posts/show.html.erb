<div class="container mt-5">
  <h4>投稿詳細</h4>
  <div class= "row">
    <div class= "col-md-6">
      <table class="table mt-5 table-borderless">
        <tbody>
          <tr>
            <td>投稿日時：</td>
            <td class="text-left"><%= @post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
          <tr>
            <td>投稿者名：</td>
            <td class="text-left"><%= link_to @user.name, admin_user_path(@user.id) %></td>
          </tr>
          <tr>
            <td>所属軍：</td>
            <td class="text-left"><%= @user.bushou.bushou_name %></td>
          </tr>
          <tr>
            <td>タイトル：</td>
            <td class="text-left"><%= @post.title %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= image_tag @post.get_image(200,200) %>
    </div>
    <div class="col-md-8">
      <%= @post.body %>
    </div>
  </div>
</div>
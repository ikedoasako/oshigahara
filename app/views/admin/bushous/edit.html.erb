<div class="container mt-5">
  <h4>武将編集画面</h4>
  <%= form_with model: @bushou, url: admin_bushou_path, method: :patch do |f| %>

  <div class="row">
    <div class="form-group col-md-10">
      <%= f.label "武将画像", class: "col-sm-3" %>
      <%= f.file_field :image, accept: "image/*", placeholder: "ファイルを選択" %>
    </div>
    <div class="form-group col-sm-10">
      <%= f.label "武将名", class: "col-sm-3" %>
      <%= f.text_field :bushou_name, class: "form-control" %>
    </div>
    <div class="form-group col-sm-10">
      <%= f.label "武将の説明", class: "col-sm-3" %>
      <%= f.text_area :explanation, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 offset-3">
      <%= f.submit "変更する", class: "btn btn-success" %>
    </div>
  </div>

  <% end %>
</div>
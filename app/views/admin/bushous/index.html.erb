<div class="container mt-5">
  <h3>武将一覧</h3>
  <div class="col-2">
    <%= link_to "新規登録", new_admin_bushou_path, class: "btn btn-light" %>
  </div>
  <div class="row">
    <% @bushous.each do |bushou| %>
    <div class="col-sm-2">
      <p><%= link_to admin_bushou_path(bushou.id) do %>
         <%= image_tag bushou.get_image(150,150) %>
         <% end %>
      </p>
      <p><%= bushou.id %></p>
      <p><%= bushou.bushou_name %></p>
    </div>
    <% end %>
  </div>
  <div class="row ustify-content-center">
    <%= paginate @bushous %>
  </div>
</div>
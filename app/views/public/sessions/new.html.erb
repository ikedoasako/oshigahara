<div class="container mt-5">
  <div class= "row">
    <div class="col-md-8 offset-2 text-center">
      <h5 class="mt-5 mb-4"><strong>会員の方はこちら</strong></h5>
      <%= form_with model: @user, url: user_session_path, method: :post do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group w-50 d-inline-block text-left">
          <label class="pt-3"> メールアドレス</label>
          <%= f.email_field :email, class: "form-control" %>
          <label class="pt-3">パスワード</label>
          <%= f.password_field :password, class: "form-control" %>
          <%= f.submit "出陣", class: "mt-4 btn btn-primary btn-block" %>
        </div>
      <% end %>
        <div class="pt-5 mb-5">
          <h5 class="mb-4"><strong>新規会員登録</strong>は</h5>
          <h5><%= link_to "こちら", new_user_registration_path %>から行なってください。</h5>
        </div>
    </div>
  </div>
</div>


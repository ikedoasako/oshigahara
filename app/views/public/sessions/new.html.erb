<div class="container mt-5">
  <div class= "row">
    <div class="mt-2">
      <h3>ログイン</h3>
    </div>
    <div class="col-md-8 text-center">

        <h5><strong>会員の方はこちら</strong></h5>
        <%= form_with model: @user, url: user_session_path, method: :post do |f| %>
        <div class="form-group w-50 d-inline-block text-left">
          <label> メールアドレス</label>
          <%= f.email_field :email, class: "form-control" %>
          <label>パスワード</label>
          <%= f.password_field :password, class: "form-control" %>
          <%= f.submit "出陣", class: "mt-3 btn btn-primary btn-block" %>
        </div>

        <% end %>
          <%# if devise_mapping.rememberable? %>
          <!--  <div class="form-group">-->
              <%#= f.check_box :remember_me %>
              <%#= f.label :remember_me %>
          <!--  </div>-->
          <%# end %>

        <div class="pt-5 mb-5">
          <h5 class="mb-4"><strong>新規会員登録</strong>は</h5>
          <h5><%= link_to "こちら", new_user_registration_path %></h5>
        </div>
    </div>
  </div>
</div>
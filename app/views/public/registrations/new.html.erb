<h2>新規会員登録</h2>

<%= form_with model: @user, url: user_registration_path, method: :post do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <div class="form_group">
      <%= f.label "所属軍"%>
      <%= f.collection_select :bushou_id, Bushou.all, :id, :bushou_name %>
    </div>
    <div class="field">
      <%= f.label "ユーザー名" %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label "パスワード（確認用）" %>
      <%= f.password_field :password %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <div class="row">
    <p></p>
    <p>既に登録済みでしたか？<br />
      此方より<br />
      <%= link_to "ログイン", new_user_session_path %>
      してください。</p>
  </div>
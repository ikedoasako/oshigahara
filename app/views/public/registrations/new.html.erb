<h2>新規会員登録</h2>

<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= form_with model: @user, url: user_registration_path, method: :post do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="form_group">
      <%= f.label "所属軍"%>
      <%= f.select :bushou, [['織田信長',1], ['上杉謙信',2], ['伊達政宗',3], ['真田幸村',4], ['徳川家康',5],
      ['豊臣秀吉',6], ['武田信玄',7], ['黒田官兵衛',8], ['明智光秀',9], ['石田三成',10]] %>
    </div>
    <div class="field">
      <%= f.label "ユーザー名" %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label "パスワード（確認用）" %><br />
      <%= f.password_field :password %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
  </div>

  <div class="row">
    <p></p>
    <p>既に登録済みでしたか？<br />
      此方より<br />
      <%= link_to "ログイン", new_user_session_path %>
      してください。</p>
  </div>
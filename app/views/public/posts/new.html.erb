<div class="container mt-5">
<h6>推し武将について投稿しよう！</h6>
<%= form_with model: @post, url: posts_path, method: :post do |f| %>
<div class="row">
  <div class="form_group">
    <%#= f.hidden_field :bushou_id, :value => @bushou.id %>
  </div>

  <div class="form-group col-sm-10">
      <%= f.label "画像", class: "col-sm-3" %>
      <%= f.file_field :image, accept: "image/*", placeholder: "ファイルを選択" %>
  </div>

  <div class="form-group col-sm-10">
    <%= f.label "タイトル", class: "col-sm-3" %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group col-sm-10">
    <%= f.label "本文", class: "col-sm-3" %>
    <%= f.text_area :body %>
  </div>

  <div class="form-group col-sm-10">
    <%= f.label "投稿する", class: "col-sm-3" %>
    <%= f.submit '攻め入る!', class: "btn btn-success" %>
  </div>
<% end %>
</div>

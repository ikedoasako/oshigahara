<div class="container mt-5 px-5 px-sm-0">
<div class="row">
  <h6>推しについて投稿しよう！</h6>
  <%= form_with model: @post, url: posts_path(@post.id), method: :post do |f| %>
  <div class="form_group">
    <%= f.label "武将選択" %>
    <%= f.collection_select :bushou_id,  Bushou.all, :id, :bushou_name %>
  </div>

  <div class="form-group col-sm-10">
      <%= f.label "画像", class: "col-sm-3" %>
      <%= f.file_field :image, accept: "image/*", placeholder: "ファイルを選択" %>
  </div>

  <div class="form-group col-sm-10">
    <%= f.label "タイトル", class: "col-sm-3" %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group col-sm-10">
    <%= f.label "本文", class: "col-sm-3" %>
    <%= f.text_area :body %>
  </div>

  <div class="form-group col-sm-10">
    <%= f.label "投稿する", class: "col-sm-3" %>
    <%= f.submit '攻め入る!', class: "btn btn-success" %>
  </div>
<% end %>
</div>

<div class="pt-8 mb-8">
  <h4>合戦内容の編集</h4>
  <%= form_with model: @post, url: post_path, method: :patch do |f| %>

    <div class="form-group">
      <label>ユーザー名</label>
      <%= @post.user.name %>
    </div>
    <div class="form-group">
      <label>所属軍</label>
      <%= @post.user.bushou.bushou_name %>
    </div>
    <div class="form-group">
      <label>武将画像</label>
      <%= f.file_field :image, accept: "image/*", placeholder: "ファイルを選択" %>
    </div>
    <div class="form-group">
      <label>タイトル</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>本文</label>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "変更を保存", class: "btn btn-outline-success" %>
    </div>
  </div>

  <% end %>
</div>
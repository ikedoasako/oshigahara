<div class="col-sm-3">
  <h4>投稿者</h4>
   <table class= "table">
      <tbody>
        <tr>
          <th>所属軍</th>
          <th><%= @user.bushou.bushou_name %></th>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <th><%= @user.name %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <a>
        <%= link_to users_information_edit_path, class: "btn btn-outline-secondary" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </a>
    </div>
    
    <h3>新規投稿</h3>
    <%= form_with model: Post.new do |f| %>
    <div class="form-group">
      <%= f.label "画像", class: "form-control" %>
      <%= f.file_field :image, accept: "image/*", placeholder: "ファイルを選択" %>
    </div>
    <div class="form-group">
      <%= f.label "タイトル", class: "form-control" %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label "本文", class: "form-control" %>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <%= f.label "投稿する", class: "form-control" %>
      <%= f.submit '攻め入る!', class: "btn btn-success" %>
    </div>
    <% end %>
</div>
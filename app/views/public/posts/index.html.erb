<div class="container mt-5">
  <div class= "row">
    <%= render 'list', posts: @posts, user: @user %>
    <div class="col-sm-9">
      <h5>攻め入り一覧</h5>
      <table class="table">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>本文</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to users_my_page_path(post.user.id) do %>
                <%= @user.name %>
                <% end %>
                <%= @user.bushou.bushou_name %>
            </th>
            <td><%= link_to post.title, post_path(post.id)%></td>
            <td><%= post.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container px-5 px-sm-0" >
  <div class= "row">
    <%= render 'list', posts: @posts, user: @user %>
    <div class="col-sm-7 offset-sm-1">
      <table class="table">
        <thead>
          <tr>
            <th>投稿者</th>
            <th></th>
            <th>タイトル</th>
            <th>本文</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to users_my_page_path(post.user.id) do %>
                <%= @user.name %>
                <% end %>
            </td>
            <td><%= @user.bushou.bushou_name %></td>
            <td><%= link_to post.title, post_path(post.id)%></td>
            <td><%= post.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
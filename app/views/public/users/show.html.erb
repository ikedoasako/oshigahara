<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <div class="mt-3 mb-5">
        <h4>会員情報</h4>
        <table class= "table">
          <tbody>
            <tr>
              <td>ユーザー名</td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td>所属軍</td>
              <td><%= @user.bushou.bushou_name %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pt-3 border-top">
        <%= link_to "編集する", users_information_edit_path, class: "btn btn-success" %>
        <%= link_to "退会する", users_unsubscribed_path, class: "btn btn-danger" %>
      </div>
    </div>

    <div class="col-md-8 offset-1">
      <div class="mt-3 mb-5">
        <h4>投稿履歴</h4>
        <div class="pt-2"></div>
        <table class= "table">
          <thead>
            <tr>
              <th class="text-nowrap pr-lg-5">武将名</th>
              <th class="text-nowrap pr-lg-5">タイトル</th>
              <th class="text-nowrap pr-lg-5">本文</th>
              <th class="text-nowrap pr-lg-5">コメント</th>
            </tr>
          </thead>
          <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.bushou.bushou_name %></td>
              <td><%= post.title%></td>
              <td><%= post.body %></td>
              <td><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



<p id="notice"><%= flash[:notice] %></p>
<div class="container mt-5">
<h4><%= @user.name %>殿の会員情報編集</h4>
<p></p>
  <form>
  <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>

    <div class= "row">
      <div class="form-group col-sm-10">
        <%= f.label "所属軍", class: "col-sm-3" %>
        <%#= f.hidden_field :bushou_id, :value => @bushou %>
        <%= f.text_field :bushou_name %>
      </div>
      <div class="form-group col-sm-10">
        <%= f.label "ユーザー名", class: "col-sm-3" %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group col-sm-10">
        <%= f.label "メールアドレス", class: "col-sm-3" %>
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10 offset-3">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
      <%= link_to "寝返る", users_betray_path, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
  </form>
</div>